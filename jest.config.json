{
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testEnvironment": "node",
  "testRegex": "/src/.*\\.test?\\.ts$",
  "moduleFileExtensions": ["ts", "js"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!**/index.ts",
    "!**/node_modules/**",
    "!**/dist/**",
    "!src/keys/key.config.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 85,
      "lines": 80,
      "statements": 80
    }
  }
}
