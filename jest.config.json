{
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testEnvironment": "node",
  "testRegex": "/src/.*\\.test?\\.ts$",
  "moduleFileExtensions": ["ts", "js"],
  "collectCoverageFrom": ["src/**/*.ts", "!**/index.ts", "!**/node_modules/**", "!**/dist/**"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
